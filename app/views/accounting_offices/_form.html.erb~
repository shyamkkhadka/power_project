<%= form_for(@accounting_office) do |f| %>
  <% if @accounting_office.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@accounting_office.errors.count, "error") %> prohibited this accounting_office from being saved:</h2>

      <ul>
      <% @accounting_office.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :regional_directorate_id %><br />
		<%= f.select :regional_directorate_id , regional_directorates, :length => 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
