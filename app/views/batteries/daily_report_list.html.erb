<h1>Test report on <%= @date %></h1>

<table class="power">
	<tr>
		<th>Bank No</th>
		<th>Total voltage</th>
		<th>Visual inspection</th>
		<th>Reported by</th>
		<th>Reported date</th>
	</tr>
	<% @battery_daily_tests.each_with_index do |battery_daily_test, i| %>
	<tr>
		<td><%= i + 1 %></td>
		<td><%= battery_daily_test.total_voltage %></td>
		<td><%= battery_daily_test.visual_inspection %></td>
		<td><%= battery_daily_test.inserted_by %></td>
		<td><%= battery_daily_test.created_at %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'Back', station_batteries_path(@station) %> | <%= link_to 'Export in excel', reports_battery_battery_daily_tests_path(@battery,:date => @date), :method => :post, :date => @date.to_s%>
