<table id="list47"></table>
<div id ="plist47"></div>

<script type ="text/javascript">

var lastgridsel;
jQuery("#list47").jqGrid({
		url:'/jqgrid', 
		datatype: "json",
		height: 150,
		rowNum: 10,
		rowList: [10,20,30],
   	colNames:['ID','Name', 'Incharge'],
   	colModel:[
   		{name:'id',index:'id', width:60, sorttype:"int"},
   		{name:'name',index:'name', width:90, sortable:false, editable:true},
   		{name:'inc_name',index:'inc_name', width:100, editable:true}
   	],
   	pager: "#plist47",
   	viewrecords: true,
   	caption: "Manipulating Array Data",
    onSelectRow: function(id) {
    	if (id && id !== lastgridsel) {
        	jQuery('#list47').jqGrid('saveRow',lastgridsel, false, 'clientArray');
            jQuery('#list47').jqGrid('editRow',id, true, null, null,'clientArray');
            lastgridsel = id;
        }
    }
});
</script>
