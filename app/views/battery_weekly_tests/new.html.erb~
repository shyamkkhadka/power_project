<script type ="text/javascript">
var lastgridsel;
var bank_id = <%=v.id %>
jQuery("#list_<%= v.id %>").jqGrid({
	url: "/batteries/<%= @battery.id %>/banks/<%= v.id %>",
  datatype: "json",
  mtype: 'GET',
	height: 'auto',
	rowNum: 24,
	colNames:['Cell no','Per Cell Voltage'],
   	colModel:[
   		{name:'id',index:'id', width:60, sorttype:"int"},
   		{name:'cell_voltage',index:'cell_voltage', width:218, sorttype:"float", editable:true},
		],
		//multikey: true,
   	//viewrecords: true,
 		//pager: '#prowed1',
   	caption: "Enter Cell Voltages, Bank #"+"<%= i + 1 %>"	,
		cellEdit: true,
		editurl: "/batteries/"+'<%= @battery.id %>'+"/banks/"+'<%= v.id %>'+"/update_cell",
		//afterSubmitCell: function (res){ alert("After edit") },
    onSelectRow: function(id) { 
				if (id && id !== lastgridsel) {
					jQuery('#list_<%= v.id %>').jqGrid('restoreRow',lastgridsel);	
					jQuery('#list_<%= v.id %>').jqGrid('editRow',id,true);				
					lastgridsel = id;
         //jQuery("#grid_id").jqGrid('saveRow',rowid, successfunc, url, extraparam, aftersavefunc,errorfunc, afterrestorefunc);
					//jQuery("#grid_id").jqGrid('editRow',rowid, keys, oneditfunc, successfunc, url, extraparam, aftersavefunc,errorfunc, afterrestorefunc);


						//jQuery("#grid_id").jqGrid('saveRow',id, url, '', {'aftersavefunc' : function (response) { alert("saved")}});
    		}
		}

});

</script>
<% end %>
